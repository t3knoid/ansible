---

services:
  radarr:
    image: ghcr.io/linuxserver/radarr:version-{{ radarr_setup_version }}
    container_name: radarr
    environment:
      - PUID=2000
      - PGID=2000
      - TZ=Etc/UTC
      - LANG=C.UTF-8
      - LC_ALL=C.UTF-8
    volumes:
      - /config:/config
{% for mount in autofs_nfs_mounts %}
      - /nfs/{{ mount.mount_name }}:{{ mount.container_path }}
{% endfor %}
    ports:
      - {{ radarr_setup_port }}:{{ radarr_setup_port }}
    restart: unless-stopped
