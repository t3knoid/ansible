---

services:
  calibre-web:
    image: ghcr.io/linuxserver/{{ calibreweb_setup_docker_image_name }}
    container_name: calibreweb
    environment:
      - PUID=2000
      - PGID=2000
      - TZ=Etc/UTC
      - LANG=C.UTF-8
      - LC_ALL=C.UTF-8
      - DOCKER_MODS=linuxserver/mods:universal-calibre #optional
      - OAUTHLIB_RELAX_TOKEN_SCOPE=1 #optional
    volumes:
      - {{ calibreweb_setup_config_dir }}:/config
{% for mount in autofs_nfs_mounts %}
      - /nfs/{{ mount.mount_name }}:{{ mount.container_path }}
{% endfor %}
    ports:
      - 8083:8083
    restart: unless-stopped
