---
# Alertmanager configuration file
# See https://prometheus.io/docs/alerting/latest/configuration/ for details

global:
  # Default settings applied to all notifications
  resolve_timeout: 5m
  smtp_smarthost: '{{ alertmanager_setup_smtp_settings_address }}:{{ alertmanager_setup_smtp_settings_port }}'
  smtp_from: '{{ alertmanager_setup_smtp_from | default("alertmanager@refol.us") }}'
  smtp_auth_username: '{{ alertmanager_setup_smtp_settings_user_name }}'
  smtp_auth_password: '{{ alertmanager_setup_smtp_settings_password }}'
  slack_api_url: '{{ alertmanager_setup_slack_api_url }}'
  pagerduty_url: '{{ alertmanager_setup_pagerduty_url }}'

# Notification templates
templates:
  - '{{ alertmanager_setup_work_dir }}/templates/*.tmpl'

# The root route
route:
  receiver: 'default-receiver'
  group_by: ['alertname', 'cluster', 'service']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 4h
  routes:
    # Child routes here

# Alert receivers
receivers:
  - name: 'default-receiver'
    # Receiver configuration here

# Inhibition rules
inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'cluster', 'service']
