server {
    listen 80;
    listen [::]:80;

    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ nginx_setup_site.server_name }};

    ssl_certificate {{ nginx_setup_letsencrypt_homedir }}/{{ nginx_setup_cert_dir }}/{{ nginx_setup_site.server_name }}/cert.pem;
    ssl_certificate_key {{ nginx_setup_letsencrypt_homedir }}/{{ nginx_setup_cert_dir }}/{{ nginx_setup_site.server_name }}/privkey.pem;  

{% for ip in nginx_setup_site.allow_list %}
    allow {{ ip }};
{% endfor %}

    deny all;
    satisfy any;

    index index.html index.htm index.php;

    location / {
        # enable for basic auth
        auth_basic "Restricted";
        auth_basic_user_file /data/nginx/.htpasswd;
        proxy_pass {{ nginx_setup_site.proxy_pass }}:{{ nginx_setup_site.port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        try_files $uri $uri/ /index.html /index.php$is_args$args =404;
    }

    # deny access to .htaccess/.htpasswd files
    location ~ /\.ht {
        deny all;
    }

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
	allow all;
    }  

}